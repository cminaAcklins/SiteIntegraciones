@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Integraciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    @{
        var token = HttpContextAccessor.HttpContext.Session.GetString("JwtToken");
    }

    @* Mostrar menú solo si hay token en sesión *@
    @if (!string.IsNullOrEmpty(token))
    {
        <div class="d-flex">
            <!-- Sidebar -->
            <nav class="bg-dark text-white vh-100 p-3" style="width: 250px;">
                <h4 class="text-center mb-4">Integración</h4>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="Identificacion" asp-action="Index">
                            <i class="bi bi-buildings me-2"></i> Identificaciones 
                        </a>
                    </li>
                </ul>
                <hr class="text-secondary">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Contenido principal -->
            <div class="flex-grow-1 p-4">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <!-- Si no hay token, solo mostramos el contenido -->
        <div class="container mt-3">
            @RenderBody()
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
